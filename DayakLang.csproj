<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Aplikasi console -->
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Setting agar bisa dipublish sebagai .NET Global Tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dayak</ToolCommandName>
    <PackageId>DayakLang.Tool</PackageId>
    <Version>0.1.2</Version>
    <Authors>Richo Albert Tio</Authors>
    <Description>Dayak script runner (.dyk)</Description>

    <!-- Taruh paket hasil pack di folder 'nupkgs' -->
    <PackageOutputPath>$(MSBuildProjectDirectory)\nupkgs</PackageOutputPath>
  </PropertyGroup>

  <!-- (Opsional) Ikutkan README/License ke paket -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" Condition="Exists('README.md')" />
    <None Include="LICENSE"   Pack="true" PackagePath="" Condition="Exists('LICENSE')" />
  </ItemGroup>

</Project>
